<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <FrameLayout
        android:id="@+id/FrameLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/writeborder" >

        <ImageView
            android:id="@+id/activity_freeboardcomment_backarrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="7dp"
            android:src="@drawable/backarrow" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" >

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="34dp"
                android:layout_height="25dp"
                android:layout_margin="5dp"
                android:src="@drawable/commentsymbol" />

            <TextView
                android:id="@+id/activity_freeboardcomment_total_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="덧글 0"
                android:textSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>
    </FrameLayout>

    <ListView
        android:id="@+id/activity_freeboardcomment_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" >
    </ListView>

    <LinearLayout
        android:id="@+id/LinearLayout1"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/writeborder"
        android:padding="5dp" >

        <ImageView
            android:id="@+id/smile"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="8dp"
            android:src="@drawable/smile" />

        <EditText
            android:id="@+id/activity_freeboardcomment_write"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:layout_height="match_parent"
            android:background="@drawable/writeborder"
            android:ems="10"
            android:hint="덧글을 입력하세요"
            android:padding="3dp" >

            <requestFocus />
        </EditText>

        <Button
            android:id="@+id/activity_freeboardcomment_write_btn"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="68dp"
            android:layout_height="40dp"
            android:background="@drawable/boardback"
            android:text="확인" />

    </LinearLayout>

</LinearLayout>
