<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/what_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="무슨 요일"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/what_day_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:editable="false"
            android:width="150px" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/what_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="몇 교시??"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/what_time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:editable="false"
            android:width="150px" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/what_contents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="　내용 　"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/what_contents_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="150px" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/table_back"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/back_schedule" />

        <Button
            android:id="@+id/table_delete"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/schedule_delete" />

        <Button
            android:id="@+id/table_save"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/schedule_store" />
    </LinearLayout>

</LinearLayout>