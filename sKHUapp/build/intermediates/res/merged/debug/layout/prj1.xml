<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
    android:background="@drawable/mainskhu">
<TextView
	android:layout_width="wrap_content" 
    android:layout_height="wrap_content"/>
<Button
	android:layout_width="150dp" 
    android:layout_height="80dp"
    android:id="@+id/make_timetable"
    android:background="@drawable/make_clender"/>
<Button
	android:layout_width="wrap_content" 
    android:layout_height="wrap_content"
    android:id="@+id/road_timetable"
    android:background="@drawable/load_clender"/>
<Button
	android:layout_width="wrap_content" 
    android:layout_height="wrap_content"
	android:id="@+id/delete_timetable"
	android:background="@drawable/delete_clender"/>
</LinearLayout>
